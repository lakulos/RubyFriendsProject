<p id="notice"><%= notice %></p>

<h1>All Friends</h1>

<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friendsdbs.each do |friendsdb| %>
      <tr>
        <td><%= friendsdb.First_Name %></td>
        <td><%= friendsdb.Last_Name %></td>
        <td><%= friendsdb.Email %></td>
        <td><%= friendsdb.Phone_Number %></td>
        <td><%= friendsdb.Twitter %></td>
        <td><%= link_to 'Show', friendsdb %></td>
        <td><%= link_to 'Edit', edit_friendsdb_path(friendsdb) %></td>
        <td><%= link_to 'Destroy', friendsdb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Friend', new_friendsdb_path, class:"btn btn-primary" %>
